<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.team.comearnapp.activity.RefinedClassSettingActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:elevation="4dp"
        app:title="课堂设置"
        app:titleTextColor="#ffffff">

    </android.support.v7.widget.Toolbar>

    <com.qmuiteam.qmui.widget.grouplist.QMUIGroupListView
        android:id="@+id/act_refined_class_setting_QMUIGLV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.qmuiteam.qmui.widget.grouplist.QMUIGroupListView>

    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
        android:id="@+id/act_refined_class_setting_QMUIRB"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_gravity="center_horizontal"
        android:text="设置完成"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:qmui_isRadiusAdjustBounds="true"
        app:qmui_borderColor="@color/colorPrimary"
        android:textColor="@color/colorPrimary" />

</LinearLayout>
